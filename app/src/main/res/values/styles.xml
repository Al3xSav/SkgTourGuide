<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_list_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_name</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="main_image_details">
        <item name="android:layout_width">@dimen/image_detail_width</item>
        <item name="android:layout_height">@dimen/image_detail_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">@dimen/linear_margin</item>
        <item name="android:layout_marginTop">@dimen/info_margin</item>
    </style>

    <style name="info_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/linear_margin</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="additional_info_texts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/info_margin</item>
        <item name="android:textSize">@dimen/additional_info</item>

    </style>

</resources>
